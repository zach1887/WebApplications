<script>
function updateSum() {
var oldSum =document.forms["frm1"]["oldNumber"].value;
var newNumber =document.forms["frm1"]["newNumber"].value;
var newSum = oldSum + newNumber;
document.getElementById("oldnumber").innerHTML = newSum;
                            }
}
